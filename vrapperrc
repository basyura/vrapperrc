set ignorecase
set smartcase

nnoremap <C-a> 0
nnoremap <C-e> $
nnoremap <C-f> <Right>
nnoremap <C-b> <Left>
nnoremap <C-u> 20<Up>
nnoremap <C-d> 20<Down>

inoremap <C-o> <Esc>o
inoremap <C-h> <BS>
inoremap <C-a> <Esc>0i
inoremap <C-e> <Esc>$i
inoremap <C-f> <Esc><Right>a
inoremap <C-b> <Esc>i
inoremap <C-d> <Esc><Right>xi


inoremap <C-u>  <C-g>u<C-u>
noremap <C-u>  <C-g>u<C-u>
noremap <C-w>  <C-g>u<C-w>


eclipseaction DeletePreviousWord org.eclipse.ui.edit.text.deletePreviousWord
inoremap <C-w> <ESC>:DeletePreviousWord<CR>i

eclipseaction DeleteToEnd org.eclipse.ui.edit.text.delete.line.to.end
inoremap <C-k> <Esc><Right>:DeleteToEnd<CR>a

eclipseaction DeleteToBegin org.eclipse.ui.edit.text.delete.line.to.beginning
inoremap <C-u> <Esc>:DeleteToBegin<CR>i

eclipseaction Redo org.eclipse.ui.edit.redo
nnoremap U :Redo<CR>

eclipseaction Format org.eclipse.jdt.ui.edit.text.java.format
vnoremap = :Format<CR>
